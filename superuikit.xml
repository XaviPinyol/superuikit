    <fields name="params" >
    <fieldset name="basic">
    <field name="suikit_theme" type="list" default="default" label="PLG_SYS_SUPERUIKIT_LABEL_DIV" description="PLG_SYS_SUPERUIKIT_LABEL_DES">
		<option value="default">PLG_SYS_SUPERUIKIT_DEFAULT</option>
		<option value="flat">PLG_SYS_SUPERUIKIT_FLAT</option>
		<option value="gradient">PLG_SYS_SSUPERUIKIT_GRADIENT</option>
    </field>
        <field	name="addons" type="radio" class="btn-group btn-group-yesno" default="0" description="Load UIkit Addons" label="Load UIkit Addons">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
	</fieldset>
    </fields>
  </config>
